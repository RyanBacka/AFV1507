var mainWin = Ti.UI.createWindow({
	backgroundColor: "#f0f8ff",
	layout: "vertical"
});

var scrollView = Titanium.UI.createScrollView({
	contentHeight : "auto",
	layout: "vertical"
});
mainWin.add(scrollView);

var title = Ti.UI.createLabel({
	text: "Events this Month",
	font:{fontSize: 30, fontWeight:"bold"},
	color: "black",
	top: 20
});
scrollView.add(title);

var buildUi = function(tblData){
	console.log(JSON.stringify(tblData));
	
	scrollView.add(Ti.UI.createLabel({
		text: tblData[0].netWea,
		font: {fontSize: 25, fontWeight: "bold"},
		color: "black",
		top: 2,
		left: 40
	}));
	scrollView.add(Ti.UI.createLabel({
		text: tblData[1].netWea,
		font: {fontSize: 20},
		color: "black",
		top: 2,
		left: 60
	}));
	scrollView.add(Ti.UI.createLabel({
		text: tblData[2].netWea,
		font: {fontSize: 14},
		color: "black",
		top:2,
		left: 40
	}));
	scrollView.add(Ti.UI.createLabel({
		text: tblData[3].netWea +", "+ tblData[4].netWea +" ("+tblData[5].netWea+ ")",
		font: {fontSize: 14},
		color: "black",
		top: 2,
		left: 40
	}));
	scrollView.add(Ti.UI.createLabel({
		text: tblData[6].netWea,
		font: {fontSize: 25},
		color: "black",
		top: 2,
		left: 40
	}));
	
};

mainWin.open();

exports.buildUi = buildUi;
